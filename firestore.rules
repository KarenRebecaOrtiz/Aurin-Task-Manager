rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Function to check if the user is an admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.access == 'admin';
    }

    // Advices collection
    match /advices/{adviceId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.creatorId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.creatorId == request.auth.uid;
    }

    // Notifications collection - Reglas mejoradas
    match /notifications/{notificationId} {
      // Solo el destinatario puede leer sus notificaciones
      allow read, list: if request.auth != null && resource.data.recipientId == request.auth.uid;
      
      // Crear notificaciones: validar que el usuario está autenticado y el recipientId es válido
      allow create: if request.auth != null && 
                    request.resource.data.keys().hasAll(['userId', 'recipientId', 'message', 'timestamp', 'read']) &&
                    request.resource.data.userId == request.auth.uid &&
                    request.resource.data.recipientId is string &&
                    request.resource.data.recipientId != '' &&
                    request.resource.data.read == false &&
                    request.resource.data.timestamp != null;
      
      // Actualizar/eliminar: solo el destinatario o admin
      allow update, delete: if request.auth != null && 
                           (resource.data.recipientId == request.auth.uid || isAdmin());
    }

    // Tasks collection
    match /tasks/{taskId} {
      // Admins have full access; non-admins can only read/list assigned tasks
      allow create: if request.auth != null;
      allow read, list: if request.auth != null; // All authenticated users can read/list, admins included
      allow update, delete: if isAdmin() || (request.auth != null && request.auth.uid in resource.data.AssignedTo && request.auth.uid == resource.data.CreatedBy);

      match /messages/{messageId} {
        // Admins have full access; non-admins can read/create for assigned tasks
        allow read, create: if isAdmin() || (request.auth != null && request.auth.uid in get(/databases/$(database)/documents/tasks/$(taskId)).data.AssignedTo);
        allow update, delete: if isAdmin() || (request.auth != null && resource.data.senderId == request.auth.uid);
      }

      match /timers/{userId} {
        // Admins have full access; non-admins can read/write their own timers for assigned tasks
        allow read: if isAdmin() || (request.auth != null && request.auth.uid in get(/databases/$(database)/documents/tasks/$(taskId)).data.AssignedTo);
        allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId && request.auth.uid in get(/databases/$(database)/documents/tasks/$(taskId)).data.AssignedTo);
      }

      match /typing/{userId} {
        // Admins have full access; non-admins can read/write their own typing for assigned tasks
        allow read: if isAdmin() || (request.auth != null && request.auth.uid in get(/databases/$(database)/documents/tasks/$(taskId)).data.AssignedTo);
        allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId && request.auth.uid in get(/databases/$(database)/documents/tasks/$(taskId)).data.AssignedTo);
      }
    }

    // Clients collection
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && isAdmin();
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // AI Conversations collection
    match /ai_conversations/{conversationId} {
      allow read, write: if isAdmin();
      match /messages/{messageId} {
        allow read, create: if isAdmin();
        allow update, delete: if isAdmin() && resource.data.senderId == request.auth.uid;
      }
    }

    // Conversations collection - Reglas mejoradas
    match /conversations/{conversationId} {
      allow read, list: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && 
                    request.resource.data.participants.size() == 2 &&
                    request.auth.uid in request.resource.data.participants;
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read: if request.auth != null && 
                    request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow create: if request.auth != null && 
                      request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
                      request.resource.data.senderId == request.auth.uid;
        allow update, delete: if request.auth != null && resource.data.senderId == request.auth.uid;
      }
      
      match /typing/{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
